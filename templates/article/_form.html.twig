            </fieldset>
   
            <fieldset class="check">
                {{ form_widget(form.promote) }}
                {{ form_label(form.promote) }}
                {{ form_errors(form.promote) }}
            </fieldset>
    </fieldset>

    <div class="row">
        {{ form_label(form.title) }}
        {{ form_widget(form.title) }}
        {{ form_errors(form.title) }}
    </div>
    
    {# <div class="row">
        {{ form_label(form.slug) }}
        {{ form_errors(form.slug) }}
