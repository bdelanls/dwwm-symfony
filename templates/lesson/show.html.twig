{% extends 'base.html.twig' %}

{% block title %}Lesson{% endblock %}

{% block body %}
    <h1>Lesson</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lesson.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ lesson.date ? lesson.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Hour</th>
                <td>{{ lesson.hour }}</td>
            </tr>
            <tr>
                <th>Booked_on</th>
                <td>{{ lesson.bookedOn ? lesson.bookedOn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Valid</th>
                <td>{{ lesson.valid ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('lesson_index') }}">back to list</a>

    <a href="{{ path('lesson_edit', {'id': lesson.id}) }}">edit</a>

    {{ include('lesson/_delete_form.html.twig') }}
{% endblock %}
