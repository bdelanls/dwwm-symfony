<ul>
	{% if is_granted("ROLE_TEACHER") == true %}
		{# users #}
		<li {% if app.request.attributes.get('_route') == 'user_index' 
			or app.request.attributes.get('_route') == 'student_show'
			%} class="active" {% endif %}>
			<a href="{{ path('user_index') }}">
				<svg>
					<title>{% if is_granted("ROLE_ADMIN") == true %} Utilisateurs {% else %} Élèves {% endif %}</title>
					<use xlink:href="/img/icons.svg#eleves"></use>
				</svg>
				<span>{% if is_granted("ROLE_ADMIN") == true %} Utilisateurs {% else %} Élèves {% endif %}</span>
			</a>
		</li>
	{% endif %}	

	{% if is_granted("ROLE_TEACHER") == true or is_granted("ROLE_STUDENT") == true %}
		{# Cours #}
		<li {% if	app.request.attributes.get('_route') == 'lesson_index' or 
					app.request.attributes.get('_route') == 'lesson_new' or 
					app.request.attributes.get('_route') == 'lesson_show' %} 
					class="active" {% endif %}>
			<a href="{{ path('lesson_index') }}">
				<svg>
					<title>Cours</title>
					<use xlink:href="/img/icons.svg#guitar"></use>
				</svg>
				<span>Cours</span>
			</a>
		</li>
		{# Agenda #}
		<li {% if app.request.attributes.get('_route') == 'lesson_agenda_index' 
				or app.request.attributes.get('_route') == 'lesson_new_day' 
				or app.request.attributes.get('_route') == 'reserve_edit'
				or app.request.attributes.get('_route') == 'lesson_edit'
				%} class="active" {% endif %}>
			<a href="{{ path('lesson_agenda_index') }}">
				<svg>
					<title>Agenda</title>
					<use xlink:href="/img/icons.svg#agenda"></use>
				</svg>
				<span>Agenda</span>
			</a>
		</li>
	{% endif %}	

	{% if is_granted("ROLE_TEACHER") == true %}
		{# documents for teacher #}
		<li>
			<a href="{{ path('file_index') }}" {% if app.request.attributes.get('_route') == 'file_index' or app.request.attributes.get('_route') == 'file_new' %} class="active" {% endif %}>
				<svg>
					<title>Documents</title>
					<use xlink:href="/img/icons.svg#doc"></use>
				</svg>
				<span>Documents</span>
			</a>
		</li>
		{# articles #}
		<li>
			<a href="{{ path('article_index') }}" {% if app.request.attributes.get('_route') == 'article_index' or app.request.attributes.get('_route') == 'article_new' or app.request.attributes.get('_route') == 'article_edit'%} class="active" {% endif %}>
				<svg>
					<title>Articles</title>
					<use xlink:href="/img/icons.svg#article"></use>
				</svg>
				<span>Articles</span>
			</a>
		</li>
	{% endif %}

	{% if app.request.attributes.get('_route') != 'app_reset_password' %}

		{% if is_granted("ROLE_TEACHER") != true and is_granted("ROLE_STUDENT") == true %}
			{# documents for students #}
			<li {% if app.request.attributes.get('_route') == 'file_index_student' %} class="active" {% endif %}>
				<a href="{{ path('file_index_student') }}">
					<svg>
						<title>Documents</title>
						<use xlink:href="/img/icons.svg#doc"></use>
					</svg>
					<span>Documents</span>
				</a>
			</li>
		{% endif %}

		{# For all #}
		<li {% if app.request.attributes.get('_route') == 'user_show' 
			or app.request.attributes.get('_route') == 'user_edit' 
			%} class="active" {% endif %}>
			<a href="{{ path('user_show', {'id': app.user.id}) }}">
				<svg>
					<title>Profil</title>
					<use xlink:href="/img/icons.svg#user"></use>
				</svg>
				<span>Profil</span>
			</a>
		</li>
		<li>
			<a href="{{ path("app_logout") }}">
				<svg>
					<title>Se déconnecter</title>
					<use xlink:href="/img/icons.svg#power-off"></use>
				</svg>
				<span>Se déconnecter</span>
			</a>
		</li>

	{% endif %}
</ul>
